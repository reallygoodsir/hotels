<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
    <display-name>hotels web application</display-name>
    <welcome-file-list>
        <welcome-file>home</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>180</session-timeout>
    </session-config>
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>org.hotels.servlets.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>HotelServlet</servlet-name>
        <servlet-class>org.hotels.servlets.HotelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HotelServlet</servlet-name>
        <url-pattern>/hotel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomServlet</servlet-name>
        <servlet-class>org.hotels.servlets.RoomServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomServlet</servlet-name>
        <url-pattern>/room</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReserveConfirmationServlet</servlet-name>
        <servlet-class>org.hotels.servlets.ReserveConfirmation</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReserveConfirmationServlet</servlet-name>
        <url-pattern>/reserve-confirmation</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReserveServlet</servlet-name>
        <servlet-class>org.hotels.servlets.ReserveServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReserveServlet</servlet-name>
        <url-pattern>/reserve</url-pattern>
    </servlet-mapping>
</web-app>
